<h1>TUUITTER-BLOG</h1>
<%= form_tag search_path, :method => "get", class:"form" do %>
  <div class=" d-flex justify-content-end">

      <div class="field ">
        <%= search_field_tag :word, "", options = { class: 'form-control me-2', type:'search'} %>
      </div>
      <div class="actions">
        <%= submit_tag "Search", class: "btn btn-outline-success", style:"margin-left:1.5em" %>
      </div>
  </div>
<% end %>
</br>
<table class="table table-striped table-bordered table-hover">
  <thead class='thead-dark'>
    <tr>
      <th>Title</th>
      <th>Creation Date</th>
      <th>Tags</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.created_at.strftime("%B %d %Y") %></td>
        <td><%= post.tags %></td>
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post , class:"btn btn-outline-dark" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Write a Tuuit', new_post_path, class:"btn btn-dark", style:"margin-bottom: 10em" %>

