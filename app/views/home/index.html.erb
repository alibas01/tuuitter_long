<h1>TUUITTER-BLOG</h1>


</br>
<table class="table table-striped table-bordered table-hover">
  <thead class='thead-dark'>
    <tr>
      <th>Title</th>
      <th>Creation Date</th>
      <th>Tags</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.created_at.strftime("%B %d %Y") %></td>
        <td><%= post.tags %></td>
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post , class:"btn btn-dark" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Write a Tuuit', new_post_path, class:"btn btn-dark" %>

