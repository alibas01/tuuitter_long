

<h1>Tuuit Search Results</h1>
</br>
<table class="table table-striped table-bordered table-hover">
  <thead class='thead-dark'>
    <tr>
      <th>Title</th>
      <th>Tags</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @outputs.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.tags %></td>
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post , class:"btn btn-outline-primary" %></td>

        <% if current_user %>
          <% if post.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-outline-success" %></td>
            <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-secondary disabled" %></td>
            
          <% else %>
            <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-secondary disabled" %></td>
            <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-secondary disabled" %></td>
          <% end %>
        <% end %>

      </tr>
    <% end %>

  </tbody>


  



  <tbody>
    <% @output_users.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.email %></td>
        <td><%= post.created_at %></td>
        <td><%= link_to 'Show', post , class:"btn btn-outline-primary" %></td>

        

      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'Back', root_path, class:"btn btn-dark", style:"margin-bottom: 10em" %>
