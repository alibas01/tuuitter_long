
<h1>Users</h1>
</br>
<table class="table table-striped table-bordered table-hover">
  <thead class='thead-dark'>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user , class:"btn btn-primary" %></td>
            <td><%= button_to 'Delete', user, method: :delete, data: { confirm: "All tuuits of #{user.email} will be deleted. Are you sure?" } , class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

