
<h1>Users</h1>
</br>
<table class="table table-striped table-bordered table-hover">
  <thead class='thead-dark'>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user , class:"btn btn-outline-primary" %></td>

        <% if current_user %>
          <% if user.id == current_user.id %>  
            <td><%= link_to 'Edit', edit_user_path(user) , class:"btn btn-outline-success" %></td>
            <td><%= link_to 'Delete', user, method: :delete, data: { confirm: "All tuuits of #{current_user.email} will be deleted. Are you sure?" } , class:"btn btn-outline-danger" %></td>
          <% else %>
            <td><%= link_to 'Edit', edit_user_path(user) , class:"btn btn-secondary disabled" %></td>
            <td><%= link_to 'Delete', user, method: :delete, data: { confirm: "All tuuits of #{current_user.email} will be deleted. Are you sure?" } , class:"btn btn-secondary disabled" %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<%= link_to 'New User', new_user_path, class:"btn btn-dark" %>
