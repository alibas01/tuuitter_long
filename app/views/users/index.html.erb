<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class='thead-dark'>
    <tr>
      <th>Email</th>
      <th>Password</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user , class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_user_path(user) , class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<%= link_to 'New User', new_user_path, class:"btn btn-secondary" %>
