
<div class="jumbotron">
  <h1 class="display-4"><%= @post.title %> </h1>
  </br>
  <p class="lead">by <%= @post.user.email %></p>
  <p class="lead">Member since <%= @post.user.created_at.strftime("%B %d %Y") %></p>
  <p class="lead">Tags: <%= @post.tags %></p>
  <hr class="my-4">
  <p class="lead"> <%= @post.post %></p>
  <br/>
  <p class="lead">
  <% if current_user %>
    <% if @post.user_id == current_user.id %>
      <%= link_to 'Edit', edit_post_path(@post), class:"btn btn-dark" %> |
    <% else %>
      <%= link_to 'Edit', edit_post_path(@post), class:"btn btn-secondary disabled" %> |
    <% end %>
  <% end %>
    <%= link_to 'Back', posts_path, class:"btn btn-dark" %>

  </p>
</div>



