
  <%= form_tag login_path do %>
    <div class="row g-3 align-items-center">

      <div class="field form-group ">
        <%= text_field_tag :email, "", options = { class: 'form-control', placeholder: 'Email', type:'email'} %>
      </div>
      </br>

      <div class="field form-group">
        <%= password_field_tag :password, "", options = { class: 'form-control', placeholder: 'Password'} %>
      </div>
      <br/>
      <div class="actions">
        <%= submit_tag "Submit", class: "btn btn-dark" %>
      </div>
    </div>
<% end %>