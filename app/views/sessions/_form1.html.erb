
  <%= form_tag '/login' do %>
    <div class="row g-3 align-items-center">
        Email:
      <div class="field form-group ">
        <%= text_field_tag :email %>
      </div>
        Password: 
      <div class="field form-group">
        <%= password_field_tag :password %>
      </div>
      <br/>
      <div class="actions">
        <%= submit_tag "Submit", class: "btn btn-dark" %>
      </div>
    </div>
<% end %>